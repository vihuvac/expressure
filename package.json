{
  "name": "expressure",
  "version": "1.0.2",
  "description": "This is Node.js API based on the OpenAPI Specification.",
  "main": "src/app.ts",
  "scripts": {
    "start": "node ./build/app.js",
    "dev": "nodemon --inspect ./src/app.ts",
    "debug": "nodemon --trace-warnings --legacy-watch --inspect=0.0.0.0:9888 --nolazy ./src/app.ts",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "docker:up": "docker compose up -d && docker logs -f expressure",
    "docker:down": "docker compose down && docker rmi -f expressure-api",
    "docker:down-all": "docker compose down -v && docker rmi -f expressure-api",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "test": "jest --runInBand --forceExit --no-cache --detectOpenHandles",
    "test:debug": "jest --watchAll --runInBand --forceExit --no-cache --detectOpenHandles",
    "test:coverage": "jest --coverage --runInBand --forceExit --no-cache --detectOpenHandles",
    "prepare": "husky",
    "docs:files": "node_modules/.bin/jsdoc --configure .jsdoc.json --verbose",
    "docs:copy-images": "read NAME VERSION <<< $(node -p \"const package=require('./package.json'); [package.name, package.version].join(' ')\") && mkdir -p docs/${NAME}/${VERSION}/docs/images && cp -r docs/images docs/${NAME}/${VERSION}/docs",
    "docs:generate": "pnpm run docs:files && pnpm run docs:copy-images",
    "sonar": "npx sonarqube-scanner"
  },
  "keywords": [
    "api",
    "express",
    "nodejs",
    "openapi",
    "swagger",
    "typescript",
    "jest",
    "jsdoc"
  ],
  "license": "MIT",
  "private": true,
  "author": "VÃ­ctor Hugo Valle Castillo <hello@vihuvac.com> (https://vihuvac.com/)",
  "packageManager": "pnpm@10.23.0",
  "dependencies": {
    "compression": "1.8.1",
    "config": "4.1.1",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "date-fns": "4.1.0",
    "express": "5.1.0",
    "express-http-context": "2.0.1",
    "express-openapi-validator": "5.6.0",
    "helmet": "8.1.0",
    "http-status-codes": "2.3.0",
    "js-yaml": "4.1.1",
    "module-alias": "2.2.3",
    "pino": "10.1.0",
    "pino-http": "11.0.0",
    "swagger-client": "3.36.0",
    "swagger-ui-express": "5.0.1",
    "xss": "1.0.15"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.39.1",
    "@stylistic/eslint-plugin": "5.6.1",
    "@types/compression": "1.8.1",
    "@types/config": "3.3.5",
    "@types/cookie-parser": "1.4.10",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.5",
    "@types/jest": "30.0.0",
    "@types/js-yaml": "4.0.9",
    "@types/node": "24.10.1",
    "@types/swagger-ui-express": "4.1.8",
    "@typescript-eslint/eslint-plugin": "8.48.0",
    "@typescript-eslint/parser": "8.48.0",
    "better-docs": "2.7.3",
    "eslint": "9.39.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.2.1",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "jest-sonar-reporter": "2.0.0",
    "jsdoc": "4.0.5",
    "jsdoc-mermaid": "1.0.0",
    "lint-staged": "16.2.7",
    "node-mocks-http": "1.17.2",
    "nodemon": "3.1.11",
    "prettier": "3.6.2",
    "sonarqube-scanner": "4.3.2",
    "swagger-model-validator": "3.0.21",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.16",
    "typescript": "5.9.3"
  },
  "_moduleAliases": {
    "@constants": "src/app/constants",
    "@controllers": "src/app/controllers",
    "@helpers": "src/app/helpers",
    "@libs": "src/app/libs",
    "@middlewares": "src/app/middlewares",
    "@services": "src/app/services",
    "@mocks": "src/tests/mocks"
  }
}
